{
  "name": "danielwaitwebsite",
  "version": "2.0.0",
  "description": "Daniel Wait's personal website - React, Node.js, SQLite",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:server": "npm run build && npm start",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "postinstall": "cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "react",
    "nodejs",
    "sqlite",
    "portfolio"
  ],
  "author": "Daniel Wait",
  "license": "MIT"
}
